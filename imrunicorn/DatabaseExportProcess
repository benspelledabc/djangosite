copyRemoteDatabase.sh (remote to kick script and pull backup)
#!/bin/bash
SRC_HOST={{production_user}}@{{production_ip_dns}}
clear
echo "Running database backup script on remote host... please wait."
OUTPUT=$(ssh $SRC_HOST "/data/django/IMRUnicorn-Django/dataBackup-silent.sh")
echo "Copying database backup output to local host... please wait."
scp $SRC_HOST:$OUTPUT .
echo "Done."


dataBackup-silent.sh, called from script above
#!/bin/bash
cd ~/django-backup
ls -1t | tail -n +3 | xargs rm -f
NOW=$(date +"%Y-%d-%m_%H%M%S%N")
OUTPUTFILE=~/django-backup/iWantItAll3_$NOW.json
source /data/django/IMRUnicorn-Django/venv/bin/activate
/data/django/IMRUnicorn-Django/imrunicorn/manage.py dumpdata --natural-foreign --exclude contenttypes --exclude auth.permission --exclude admin.logentry --exclude sessions.session --indent 4 > ~/django-backup/iWantItAll3_$NOW.json
rm -fR ~/django-backup/latest/iWant*
cp ~/django-backup/iWantItAll3_$NOW.json ~/django-backup/latest/iWantItAll3_$NOW.json

echo "~/django-backup/latest/iWantItAll3_$NOW.json"